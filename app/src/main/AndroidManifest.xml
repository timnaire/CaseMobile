<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.kidzonshock.acase.acase">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- [START firebase_service] -->
        <service android:name="org.kidzonshock.acase.acase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"></action>
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Lawyer.SignupLawyer1"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >

        </activity>
        <activity android:name=".Lawyer.SignupLawyer2" ></activity>
        <activity
            android:name=".Lawyer.Dashboard"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".Lawyer.ChangePicture" ></activity>
        <activity android:name=".Lawyer.ChangeInformation" ></activity>
        <activity android:name=".Lawyer.ChangeEmail" ></activity>
        <activity android:name=".Lawyer.ChangePassword" ></activity>
        <activity
            android:name=".Client.ClientNavigation"
            android:label="@string/title_activity_client_navigation"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>
        <activity android:name=".Lawyer.MyEvent" ></activity>
        <activity android:name=".Lawyer.CaseDocument" ></activity>
        <activity android:name=".Lawyer.LawyerSignin" ></activity>
        <activity android:name=".Client.ClientSignin" ></activity>
        <activity android:name=".Client.SignupClient1" ></activity>
        <activity android:name=".Client.SignupClient2" ></activity>

        <activity android:name=".Lawyer.EditCase" ></activity>
        <activity android:name=".Lawyer.ViewCase"></activity>

        <activity android:name=".Client.ClientChangePicture" ></activity>
        <activity android:name=".Client.ClientChangeEmail" ></activity>
        <activity android:name=".Client.ClientChangeInformation" ></activity>
        <activity android:name=".Client.ClientChangePassword"></activity>

    </application>

</manifest>