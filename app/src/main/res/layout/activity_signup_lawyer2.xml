<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lawyer.SignupLawyer2">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutRegOfficeLawyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="257dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputRegOfficeLawyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Office Address" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinnerRegProvinceLawyer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/cityOrMunicipality"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="194dp" />

    <Spinner
        android:id="@+id/spinnerLawpracticeLawyer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/law_practice"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="319dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutRegPassLawyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="257dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputRegPassLawyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutRegConfirmLawyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="257dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputRegConfirmLawyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnRegLawyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#3dcf94"
        android:text="Sign Up"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="423dp" />
</LinearLayout>